<%# Page Header %>
<%= render "shared/components/page_header",
    title: "Shops",
    subtitle: "Manage your OLX integration shops",
    actions: capture {
      link_to new_shop_path, class: "inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-dark transition-colors" do
        raw('<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>')
        concat "New Shop"
      end
    } %>

<% if @shops.any? %>
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 xl:grid-cols-3">
    <% @shops.each do |shop| %>
      <div class="rounded-xl border border-gray-200 bg-white shadow-card hover:shadow-lg transition-all dark:border-strokedark dark:bg-boxdark">
        <div class="p-6">
          <div class="flex items-start justify-between">
            <div class="flex items-center gap-4">
              <div class="flex h-14 w-14 items-center justify-center rounded-full bg-primary/10">
                <svg class="h-7 w-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white"><%= shop.name %></h3>
                <p class="text-sm text-gray-500 dark:text-bodydark2"><%= pluralize(shop.products.count, 'product') %></p>
              </div>
            </div>

            <%# Dropdown menu %>
            <div data-controller="dropdown" class="relative">
              <button
                data-action="click->dropdown#toggle"
                class="flex h-8 w-8 items-center justify-center rounded-lg hover:bg-gray-100 dark:hover:bg-strokedark"
              >
                <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
                </svg>
              </button>
              <div
                data-dropdown-target="menu"
                class="hidden absolute right-0 mt-2 w-40 rounded-lg border border-gray-200 bg-white shadow-lg dark:border-strokedark dark:bg-boxdark z-10"
              >
                <ul class="py-1">
                  <li>
                    <%= link_to edit_shop_path(shop), class: "flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-bodydark1 dark:hover:bg-strokedark" do %>
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                      Edit
                    <% end %>
                  </li>
                  <li>
                    <%= button_to shop_path(shop), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this shop?" }, class: "flex w-full items-center gap-2 px-4 py-2 text-sm text-danger hover:bg-danger-light dark:hover:bg-danger/10" do %>
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                      Delete
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <%# Quick Stats %>
          <div class="mt-6 grid grid-cols-3 gap-3">
            <div class="rounded-lg bg-gray-50 p-3 text-center dark:bg-strokedark">
              <p class="text-lg font-bold text-gray-900 dark:text-white"><%= shop.products.count %></p>
              <p class="text-xs text-gray-500 dark:text-bodydark2">Products</p>
            </div>
            <div class="rounded-lg bg-gray-50 p-3 text-center dark:bg-strokedark">
              <p class="text-lg font-bold text-gray-900 dark:text-white"><%= shop.imports.count rescue 0 %></p>
              <p class="text-xs text-gray-500 dark:text-bodydark2">Imports</p>
            </div>
            <div class="rounded-lg bg-gray-50 p-3 text-center dark:bg-strokedark">
              <p class="text-lg font-bold text-gray-900 dark:text-white"><%= shop.olx_category_templates.count rescue 0 %></p>
              <p class="text-xs text-gray-500 dark:text-bodydark2">Templates</p>
            </div>
          </div>

          <%# Actions %>
          <div class="mt-6 flex gap-2">
            <%= link_to shop_path(shop), class: "flex-1 inline-flex items-center justify-center gap-1 rounded-lg bg-primary px-4 py-2 text-sm font-medium text-white hover:bg-primary-dark transition-colors" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              View
            <% end %>
            <%= link_to shop_products_path(shop), class: "flex-1 inline-flex items-center justify-center gap-1 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-strokedark dark:bg-boxdark dark:text-bodydark1 dark:hover:bg-strokedark transition-colors" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
              Products
            <% end %>
          </div>
        </div>

        <div class="border-t border-gray-200 bg-gray-50 px-6 py-3 dark:border-strokedark dark:bg-boxdark-2">
          <p class="text-xs text-gray-500 dark:text-bodydark2">
            Created <%= time_ago_in_words(shop.created_at) %> ago
          </p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <%# Empty State %>
  <div class="rounded-xl border border-gray-200 bg-white p-12 text-center shadow-card dark:border-strokedark dark:bg-boxdark">
    <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gray-100 dark:bg-strokedark">
      <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
    </div>
    <h3 class="mt-4 text-lg font-semibold text-gray-900 dark:text-white">No shops yet</h3>
    <p class="mt-2 text-sm text-gray-500 dark:text-bodydark2">Get started by creating your first shop.</p>
    <div class="mt-6">
      <%= link_to new_shop_path, class: "inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-dark" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Create Shop
      <% end %>
    </div>
  </div>
<% end %>
