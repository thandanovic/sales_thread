<%# Page Header %>
<%= render "shared/components/page_header",
    title: "Overview",
    subtitle: "Shop dashboard and recent activity",
    actions: capture {
      concat link_to(edit_shop_path(@shop), class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-strokedark dark:bg-boxdark dark:text-bodydark1 dark:hover:bg-strokedark transition-colors") {
        raw('<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>') +
        "Edit"
      }

      concat " "

      concat button_to(setup_olx_data_shop_path(@shop), method: :post, data: { turbo: false, confirm: "This will fetch all OLX categories and locations. Continue?" }, form_class: "inline-block", class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-strokedark dark:bg-boxdark dark:text-bodydark1 dark:hover:bg-strokedark transition-colors") {
        raw('<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/></svg>') +
        "Setup OLX"
      }

      concat " "

      concat button_to(sync_from_olx_shop_path(@shop), method: :post, data: { turbo: false, confirm: "This will sync up to 200 NEW active listings from your OLX account. Already synced products will be skipped. Continue?" }, form_class: "inline-block", class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-strokedark dark:bg-boxdark dark:text-bodydark1 dark:hover:bg-strokedark transition-colors") {
        raw('<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>') +
        "Sync from OLX"
      }

      concat " "

      concat link_to(new_shop_import_path(@shop), class: "inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-dark transition-colors") {
        raw('<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>') +
        "New Import"
      }
    } %>

<%# Stats Grid %>
<div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-4">
  <%= render "shared/components/stat_card",
      title: "Total Products",
      value: @shop.products.count,
      icon: "box",
      color: "primary",
      link_path: shop_products_path(@shop),
      link_text: "View all" %>

  <%= render "shared/components/stat_card",
      title: "Total Imports",
      value: @shop.import_logs.count,
      icon: "upload",
      color: "info",
      link_path: shop_imports_path(@shop),
      link_text: "View all" %>

  <%= render "shared/components/stat_card",
      title: "OLX Templates",
      value: @shop.olx_category_templates.count,
      icon: "template",
      color: "warning",
      link_path: shop_olx_category_templates_path(@shop),
      link_text: "Manage" %>

  <%= render "shared/components/stat_card",
      title: "Team Members",
      value: @shop.users.count,
      icon: "users",
      color: "success" %>
</div>

<%# Main Content Grid %>
<div class="grid grid-cols-1 gap-6 xl:grid-cols-2">
  <%# Recent Products %>
  <%= render "shared/components/card", title: "Recent Products", padding: false do %>
    <% if @products.any? %>
      <ul class="divide-y divide-gray-200 dark:divide-strokedark">
        <% @products.each do |product| %>
          <li class="group">
            <%= link_to shop_product_path(@shop, product), class: "flex items-center justify-between px-6 py-4 hover:bg-gray-50 dark:hover:bg-strokedark transition-colors" do %>
              <div class="flex items-center gap-4 min-w-0">
                <% if product.images.attached? && product.images.first.present? %>
                  <%= image_tag product.images.first, class: "h-12 w-12 rounded-lg object-cover" %>
                <% elsif product.image_urls.present? && product.image_urls.first.present? %>
                  <%= image_tag product.image_urls.first, class: "h-12 w-12 rounded-lg object-cover" %>
                <% else %>
                  <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-gray-100 dark:bg-strokedark">
                    <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
                <div class="min-w-0">
                  <p class="font-medium text-gray-900 dark:text-white truncate group-hover:text-primary">
                    <%= product.title %>
                  </p>
                  <p class="text-sm text-gray-500 dark:text-bodydark2">
                    <%= product.source.humanize %> &bull; <%= number_to_currency(product.final_price || product.price || 0, unit: product.currency || "BAM") %>
                  </p>
                </div>
              </div>
              <div class="flex items-center gap-3 ml-4">
                <% if product.published_on_olx? %>
                  <%= render "shared/components/badge", text: "Live", type: "success" %>
                <% elsif product.has_olx_listing? %>
                  <%= render "shared/components/badge", text: "Draft", type: "warning" %>
                <% else %>
                  <%= render "shared/components/badge", text: "Not on OLX", type: "default" %>
                <% end %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>

      <div class="border-t border-gray-200 dark:border-strokedark px-6 py-4">
        <%= link_to shop_products_path(@shop), class: "text-sm font-medium text-primary hover:text-primary-dark inline-flex items-center gap-1" do %>
          View all products
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">No products yet</h3>
        <p class="mt-2 text-sm text-gray-500 dark:text-bodydark2">
          Import products or create them manually.
        </p>
        <div class="mt-6">
          <%= link_to new_shop_import_path(@shop), class: "inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-dark" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Start Import
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <%# Recent Imports %>
  <%= render "shared/components/card", title: "Recent Imports", padding: false do %>
    <% if @recent_imports.any? %>
      <ul class="divide-y divide-gray-200 dark:divide-strokedark">
        <% @recent_imports.each do |import| %>
          <li class="group">
            <%= link_to shop_import_path(@shop, import), class: "flex items-center justify-between px-6 py-4 hover:bg-gray-50 dark:hover:bg-strokedark transition-colors" do %>
              <div class="flex items-center gap-4">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-info/10">
                  <svg class="h-5 w-5 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white group-hover:text-primary">
                    <%= import.source.humanize %> Import
                  </p>
                  <p class="text-sm text-gray-500 dark:text-bodydark2">
                    <% if import.total_rows.present? %>
                      <%= import.successful_rows %>/<%= import.total_rows %> successful
                    <% else %>
                      Pending
                    <% end %>
                    &bull; <%= time_ago_in_words(import.created_at) %> ago
                  </p>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <%
                  status_type = case import.status
                    when 'completed' then 'success'
                    when 'processing' then 'info'
                    when 'failed' then 'danger'
                    else 'default'
                  end
                %>
                <%= render "shared/components/badge", text: import.status.humanize, type: status_type %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>

      <div class="border-t border-gray-200 dark:border-strokedark px-6 py-4">
        <%= link_to shop_imports_path(@shop), class: "text-sm font-medium text-primary hover:text-primary-dark inline-flex items-center gap-1" do %>
          View all imports
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">No imports yet</h3>
        <p class="mt-2 text-sm text-gray-500 dark:text-bodydark2">
          Start importing products from CSV or Intercars.
        </p>
        <div class="mt-6">
          <%= link_to new_shop_import_path(@shop), class: "inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-dark" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Start Import
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
