<%= form_with(model: shop, class: "space-y-6") do |form| %>
  <% if shop.errors.any? %>
    <div class="rounded-lg bg-danger/10 border border-danger/30 p-4">
      <div class="flex gap-3">
        <svg class="h-5 w-5 text-danger flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <div>
          <h3 class="text-sm font-medium text-danger">
            <%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:
          </h3>
          <ul class="mt-2 text-sm text-danger/80 list-disc pl-5 space-y-1">
            <% shop.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <%# Basic Information Section %>
  <div>
    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Basic Information</h3>

    <div class="space-y-5">
      <div>
        <label class="mb-2.5 block text-sm font-medium text-gray-700 dark:text-bodydark1">
          Shop Name <span class="text-danger">*</span>
        </label>
        <%= form.text_field :name,
            class: "w-full rounded-lg border border-gray-300 bg-white py-3 px-4 text-gray-900 outline-none focus:border-primary focus:ring-1 focus:ring-primary dark:border-strokedark dark:bg-boxdark dark:text-white dark:focus:border-primary transition-colors",
            placeholder: "My Shop",
            required: true %>
      </div>

      <div>
        <label class="mb-2.5 block text-sm font-medium text-gray-700 dark:text-bodydark1">
          Shop Logo
        </label>
        <div class="flex items-center gap-4">
          <% if shop.logo.attached? %>
            <div class="flex-shrink-0">
              <%= image_tag shop.logo, class: "h-16 w-16 rounded-lg object-cover border border-gray-200 dark:border-strokedark" %>
            </div>
          <% else %>
            <div class="flex h-16 w-16 items-center justify-center rounded-lg bg-gray-100 dark:bg-strokedark border border-gray-200 dark:border-strokedark">
              <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
          <% end %>
          <div class="flex-1">
            <%= form.file_field :logo,
                accept: "image/*",
                class: "w-full text-sm text-gray-500 dark:text-bodydark2 file:mr-4 file:rounded-lg file:border-0 file:bg-primary/10 file:px-4 file:py-2 file:text-sm file:font-medium file:text-primary hover:file:bg-primary/20 dark:file:bg-primary/20 dark:file:text-primary-light cursor-pointer" %>
            <p class="mt-1.5 text-xs text-gray-500 dark:text-bodydark2">PNG, JPG or GIF. Max 2MB. Shown in header next to shop name.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# OLX Integration Section %>
  <div class="border-t border-gray-200 dark:border-strokedark pt-6">
    <div class="mb-4">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white">OLX Integration</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-bodydark2">Connect your OLX account to publish products to OLX marketplace.</p>
    </div>

    <div class="space-y-5">
      <div>
        <label class="mb-2.5 block text-sm font-medium text-gray-700 dark:text-bodydark1">
          OLX Username/Email
        </label>
        <%= form.text_field :olx_username,
            class: "w-full rounded-lg border border-gray-300 bg-white py-3 px-4 text-gray-900 outline-none focus:border-primary focus:ring-1 focus:ring-primary dark:border-strokedark dark:bg-boxdark dark:text-white dark:focus:border-primary transition-colors",
            placeholder: "your@email.com",
            autocomplete: "off" %>
      </div>

      <div>
        <label class="mb-2.5 block text-sm font-medium text-gray-700 dark:text-bodydark1">
          OLX Password
        </label>
        <%= form.password_field :olx_password,
            class: "w-full rounded-lg border border-gray-300 bg-white py-3 px-4 text-gray-900 outline-none focus:border-primary focus:ring-1 focus:ring-primary dark:border-strokedark dark:bg-boxdark dark:text-white dark:focus:border-primary transition-colors",
            placeholder: "Enter password",
            autocomplete: "new-password" %>
        <p class="mt-1.5 text-xs text-gray-500 dark:text-bodydark2">Your password is securely stored and never shown.</p>
      </div>

      <% if shop.persisted? %>
        <div>
          <button type="button" id="test-olx-connection" class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-strokedark dark:bg-boxdark dark:text-bodydark1 dark:hover:bg-strokedark transition-colors">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Test Connection
          </button>
          <div id="connection-status" class="mt-3"></div>
        </div>

        <% if shop.olx_access_token.present? %>
          <div class="rounded-lg bg-success/10 border border-success/30 p-4">
            <div class="flex gap-3">
              <svg class="h-5 w-5 text-success flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="text-sm font-medium text-success">Connected to OLX</p>
                <p class="mt-1 text-xs text-success/80">
                  Token expires: <%= shop.formatted_olx_token_expiration %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <%# Form Actions %>
  <div class="flex justify-end gap-3 pt-6 border-t border-gray-200 dark:border-strokedark">
    <%= link_to "Cancel", (shop.persisted? ? shop_path(shop) : shops_path), class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-5 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-strokedark dark:bg-boxdark dark:text-bodydark1 dark:hover:bg-strokedark transition-colors" %>
    <%= form.submit (shop.persisted? ? "Update Shop" : "Create Shop"), class: "inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-dark transition-colors cursor-pointer" %>
  </div>
<% end %>

<% if shop.persisted? %>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const testButton = document.getElementById('test-olx-connection');
  const statusDiv = document.getElementById('connection-status');

  if (testButton) {
    testButton.addEventListener('click', async function() {
      // Get current values from form
      const username = document.querySelector('input[name="shop[olx_username]"]').value;
      const password = document.querySelector('input[name="shop[olx_password]"]').value;

      if (!username || !password) {
        statusDiv.innerHTML = `
          <div class="rounded-lg bg-warning/10 border border-warning/30 p-4">
            <p class="text-sm text-warning">Please enter both username and password first.</p>
          </div>
        `;
        return;
      }

      // Save credentials first, then test
      testButton.disabled = true;
      testButton.innerHTML = `
        <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Testing...
      `;
      statusDiv.innerHTML = '';

      try {
        // First save the shop to update credentials
        const formData = new FormData(testButton.closest('form'));
        const updateResponse = await fetch(testButton.closest('form').action, {
          method: 'PATCH',
          body: formData,
          headers: {
            'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
            'Accept': 'text/html'
          }
        });

        if (!updateResponse.ok) {
          throw new Error('Failed to save credentials');
        }

        // Then test the connection
        const response = await fetch('<%= test_olx_connection_shop_path(shop) %>', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          }
        });

        const data = await response.json();

        if (data.success) {
          statusDiv.innerHTML = `
            <div class="rounded-lg bg-success/10 border border-success/30 p-4">
              <div class="flex gap-3">
                <svg class="h-5 w-5 text-success flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-success">${data.message}</p>
                  ${data.user ? `<p class="mt-1 text-xs text-success/80">Logged in as: ${data.user.email || data.user.username}</p>` : ''}
                </div>
              </div>
            </div>
          `;
          // Reload page after 2 seconds to show updated connection status
          setTimeout(() => window.location.reload(), 2000);
        } else {
          statusDiv.innerHTML = `
            <div class="rounded-lg bg-danger/10 border border-danger/30 p-4">
              <div class="flex gap-3">
                <svg class="h-5 w-5 text-danger flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-danger">${data.message}</p>
                </div>
              </div>
            </div>
          `;
        }
      } catch (error) {
        statusDiv.innerHTML = `
          <div class="rounded-lg bg-danger/10 border border-danger/30 p-4">
            <p class="text-sm text-danger">Error: ${error.message}</p>
          </div>
        `;
      } finally {
        testButton.disabled = false;
        testButton.innerHTML = `
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Test Connection
        `;
      }
    });
  }
});
</script>
<% end %>
