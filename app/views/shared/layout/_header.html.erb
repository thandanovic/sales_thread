<%# TailAdmin-style Header %>
<header class="sticky top-0 z-40 flex w-full bg-white border-b border-gray-200 dark:bg-boxdark dark:border-strokedark">
  <div class="flex flex-grow items-center justify-between px-4 py-3 md:px-6">
    <%# Left side: Hamburger menu %>
    <div class="flex items-center gap-2 sm:gap-4 lg:hidden">
      <button
        data-action="click->sidebar#toggle"
        class="z-50 block rounded-md border border-gray-200 bg-white p-1.5 shadow-sm dark:border-strokedark dark:bg-boxdark lg:hidden"
      >
        <svg class="h-5 w-5 text-gray-600 dark:text-bodydark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <%# Center: Shop name or page title %>
    <div class="hidden sm:flex items-center gap-3">
      <% if defined?(@shop) && @shop.present? && @shop.persisted? %>
        <%= link_to shop_path(@shop), class: "flex items-center gap-3 hover:opacity-80 transition-opacity" do %>
          <% if @shop.logo.attached? %>
            <%= image_tag @shop.logo, class: "h-10 w-10 rounded-lg object-cover border border-gray-200 dark:border-strokedark" %>
          <% else %>
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 dark:bg-primary/20">
              <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
          <% end %>
          <div>
            <h1 class="text-lg font-semibold text-gray-900 dark:text-white"><%= @shop.name %></h1>
            <p class="text-xs text-gray-500 dark:text-bodydark2">
              <%= case controller_name
                  when 'shops' then action_name == 'show' ? 'Overview' : action_name.humanize
                  when 'products' then 'Products'
                  when 'imports' then 'Imports'
                  when 'olx_category_templates' then 'OLX Templates'
                  else controller_name.humanize
                  end %>
            </p>
          </div>
        <% end %>
      <% elsif content_for?(:page_title) %>
        <h1 class="text-lg font-semibold text-gray-900 dark:text-white"><%= yield :page_title %></h1>
      <% end %>
    </div>

    <%# Right side: Actions %>
    <div class="flex items-center gap-2 sm:gap-4">
      <%# Dark Mode Toggle %>
      <div data-controller="dark-mode">
        <button
          data-action="click->dark-mode#toggle"
          class="flex h-8 w-8 items-center justify-center rounded-md border border-gray-200 bg-gray-50 hover:bg-gray-100 dark:border-strokedark dark:bg-boxdark-2 dark:hover:bg-strokedark transition-colors"
          title="Toggle dark mode"
        >
          <%# Sun icon (shown in dark mode, click to go light) %>
          <svg data-dark-mode-target="darkIcon" class="h-4 w-4 text-yellow-400 hidden" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
          </svg>
          <%# Moon icon (shown in light mode, click to go dark) %>
          <svg data-dark-mode-target="lightIcon" class="h-4 w-4 text-gray-500 dark:text-bodydark" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
          </svg>
        </button>
      </div>

      <%# User Dropdown %>
      <div data-controller="dropdown" class="relative">
        <button
          data-action="click->dropdown#toggle"
          data-dropdown-target="button"
          class="flex items-center gap-2 rounded-md px-2 py-1.5 hover:bg-gray-100 dark:hover:bg-strokedark transition-colors"
        >
          <span class="hidden text-right lg:block">
            <span class="block text-sm font-medium text-gray-900 dark:text-white"><%= current_user.email.split('@').first %></span>
          </span>

          <span class="h-8 w-8 rounded-full bg-primary flex items-center justify-center flex-shrink-0">
            <span class="text-white font-medium text-xs"><%= current_user.email[0..1].upcase %></span>
          </span>

          <svg class="hidden lg:block h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>

        <%# Dropdown Menu %>
        <div
          data-dropdown-target="menu"
          class="hidden absolute right-0 mt-2 w-56 rounded-lg border border-gray-200 bg-white shadow-lg dark:border-strokedark dark:bg-boxdark z-50"
        >
          <div class="px-4 py-3 border-b border-gray-100 dark:border-strokedark">
            <p class="text-sm font-medium text-gray-900 dark:text-white truncate"><%= current_user.email %></p>
          </div>

          <div class="py-1">
            <%= link_to edit_user_registration_path, class: "flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 dark:text-bodydark1 dark:hover:bg-strokedark" do %>
              <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              Account Settings
            <% end %>
          </div>

          <div class="border-t border-gray-100 dark:border-strokedark py-1">
            <%= button_to destroy_user_session_path, method: :delete, class: "flex w-full items-center gap-2 px-4 py-2 text-sm text-danger hover:bg-red-50 dark:hover:bg-danger/10" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
              Sign Out
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
