<%#
  Breadcrumb Component - TailAdmin style
  Usage:
    render "shared/components/breadcrumb", items: [
      { label: "Dashboard", path: root_path },
      { label: "Products", path: shop_products_path(@shop) },
      { label: "Edit" }  # Last item has no path
    ]
%>
<%
  items ||= []
%>

<nav class="mb-6" aria-label="Breadcrumb">
  <ol class="flex items-center gap-2 text-sm">
    <% items.each_with_index do |item, index| %>
      <li class="flex items-center gap-2">
        <% if index > 0 %>
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>

        <% if item[:path].present? && index < items.length - 1 %>
          <%= link_to item[:label], item[:path], class: "text-gray-500 hover:text-primary dark:text-bodydark2 dark:hover:text-primary" %>
        <% else %>
          <span class="text-gray-900 font-medium dark:text-white"><%= item[:label] %></span>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>
