<%#
  Alert Component - TailAdmin style
  Usage: render "shared/components/alert", type: "success", message: "Your message"
  Types: success, error, warning, info
%>
<%
  type ||= "info"
  dismissible ||= true

  styles = {
    "success" => {
      bg: "bg-success/10 dark:bg-success/20",
      border: "border-success",
      icon_color: "text-success",
      text_color: "text-success dark:text-success"
    },
    "error" => {
      bg: "bg-danger/10 dark:bg-danger/20",
      border: "border-danger",
      icon_color: "text-danger",
      text_color: "text-danger dark:text-danger"
    },
    "warning" => {
      bg: "bg-warning/10 dark:bg-warning/20",
      border: "border-warning",
      icon_color: "text-warning",
      text_color: "text-warning dark:text-warning"
    },
    "info" => {
      bg: "bg-info/10 dark:bg-info/20",
      border: "border-info",
      icon_color: "text-info",
      text_color: "text-info dark:text-info"
    }
  }

  style = styles[type] || styles["info"]
%>

<div class="mb-4 flex w-full rounded-lg border-l-4 <%= style[:border] %> <%= style[:bg] %> px-4 py-3" role="alert">
  <div class="mr-3 flex h-6 w-6 items-center justify-center">
    <% case type %>
    <% when "success" %>
      <svg class="h-5 w-5 <%= style[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    <% when "error" %>
      <svg class="h-5 w-5 <%= style[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    <% when "warning" %>
      <svg class="h-5 w-5 <%= style[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    <% else %>
      <svg class="h-5 w-5 <%= style[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    <% end %>
  </div>

  <div class="flex-1">
    <p class="text-sm font-medium <%= style[:text_color] %>"><%= message %></p>
  </div>

  <% if dismissible %>
    <button
      type="button"
      class="ml-3 <%= style[:icon_color] %> hover:opacity-75"
      onclick="this.closest('[role=alert]').remove()"
    >
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  <% end %>
</div>
