<%#
  Badge/Status Component - TailAdmin style
  Usage:
    render "shared/components/badge", text: "Live", type: "success"
    render "shared/components/badge", text: "Draft", type: "warning"

  Types: success, warning, danger, info, default
%>
<%
  text ||= ""
  type ||= "default"
  dot ||= true  # Show dot indicator

  styles = {
    "success" => "bg-success/10 text-success",
    "warning" => "bg-warning/10 text-warning",
    "danger" => "bg-danger/10 text-danger",
    "info" => "bg-info/10 text-info",
    "default" => "bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-300"
  }

  style = styles[type] || styles["default"]
%>

<span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-medium <%= style %>">
  <% if dot %>
    <span class="mr-1.5 h-1.5 w-1.5 rounded-full bg-current"></span>
  <% end %>
  <%= text %>
</span>
