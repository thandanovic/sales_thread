<% if impersonating? %>
  <div class="fixed top-0 left-0 right-0 z-[60] bg-yellow-500 text-yellow-900 py-2 px-4 text-center text-sm font-medium shadow-md">
    <div class="flex items-center justify-center gap-4">
      <span>
        <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        You are impersonating <strong><%= current_user.email %></strong>
      </span>
      <%= button_to stop_impersonation_path, method: :delete, class: "inline-flex items-center gap-1 bg-yellow-700 hover:bg-yellow-800 text-white px-3 py-1 rounded text-xs font-semibold transition-colors" do %>
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
        Stop Impersonating
      <% end %>
    </div>
  </div>
<% end %>
