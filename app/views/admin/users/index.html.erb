<% content_for :title, "User Management - SLX.ba" %>

<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-title-md2 font-bold text-black dark:text-white">User Management</h2>
    <p class="mt-1 text-sm text-bodydark2">Manage all users in the system</p>
  </div>
  <%= link_to new_admin_user_path, class: "inline-flex items-center justify-center gap-2 rounded-md bg-primary px-6 py-3 font-medium text-white hover:bg-primary-dark transition-colors" do %>
    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Add User
  <% end %>
</div>

<div class="rounded-xl border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
  <div class="max-w-full overflow-x-auto">
    <table class="w-full table-auto">
      <thead>
        <tr class="bg-gray-2 text-left dark:bg-meta-4">
          <th class="min-w-[200px] py-4 px-4 font-medium text-black dark:text-white">Email</th>
          <th class="min-w-[100px] py-4 px-4 font-medium text-black dark:text-white">Role</th>
          <th class="min-w-[120px] py-4 px-4 font-medium text-black dark:text-white">Shops</th>
          <th class="min-w-[150px] py-4 px-4 font-medium text-black dark:text-white">Created</th>
          <th class="py-4 px-4 font-medium text-black dark:text-white">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="border-b border-stroke dark:border-strokedark hover:bg-gray-1 dark:hover:bg-meta-4">
            <td class="py-4 px-4">
              <div class="flex items-center gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary text-white text-sm font-medium">
                  <%= user.email[0..1].upcase %>
                </div>
                <div>
                  <p class="font-medium text-black dark:text-white"><%= user.email %></p>
                  <p class="text-xs text-bodydark2">ID: <%= user.id %></p>
                </div>
              </div>
            </td>
            <td class="py-4 px-4">
              <% if user.system_admin? %>
                <span class="inline-flex rounded-full bg-danger/10 py-1 px-3 text-sm font-medium text-danger">
                  Admin
                </span>
              <% else %>
                <span class="inline-flex rounded-full bg-bodydark2/10 py-1 px-3 text-sm font-medium text-bodydark2">
                  User
                </span>
              <% end %>
            </td>
            <td class="py-4 px-4">
              <% if user.system_admin? %>
                <span class="text-bodydark2">All shops</span>
              <% elsif user.memberships.any? %>
                <div class="flex flex-wrap gap-1">
                  <% user.memberships.limit(3).each do |m| %>
                    <span class="inline-flex rounded bg-primary/10 py-0.5 px-2 text-xs font-medium text-primary">
                      <%= m.shop.name.truncate(15) %> (<%= m.role %>)
                    </span>
                  <% end %>
                  <% if user.memberships.count > 3 %>
                    <span class="text-xs text-bodydark2">+<%= user.memberships.count - 3 %> more</span>
                  <% end %>
                </div>
              <% else %>
                <span class="text-bodydark2">No shops</span>
              <% end %>
            </td>
            <td class="py-4 px-4">
              <p class="text-sm text-black dark:text-white"><%= user.created_at.strftime("%b %d, %Y") %></p>
              <p class="text-xs text-bodydark2"><%= time_ago_in_words(user.created_at) %> ago</p>
            </td>
            <td class="py-4 px-4">
              <div class="flex items-center gap-2">
                <%= link_to admin_user_path(user), class: "hover:text-primary" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                <% end %>
                <%= link_to edit_admin_user_path(user), class: "hover:text-primary" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>
                <% unless user == true_user %>
                  <%= button_to impersonate_admin_user_path(user), method: :post, class: "hover:text-success", title: "Impersonate" do %>
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                  <% end %>
                  <%= button_to admin_user_path(user), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: "hover:text-danger" do %>
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @users.respond_to?(:total_pages) && @users.total_pages > 1 %>
  <div class="mt-4">
    <%= paginate @users %>
  </div>
<% end %>
