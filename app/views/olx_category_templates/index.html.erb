<%# Page Header %>
<%= render "shared/components/page_header",
    title: "OLX Category Templates",
    subtitle: "Manage reusable OLX category mappings for your products",
    actions: capture {
      concat link_to(shop_path(@shop), class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-strokedark dark:bg-boxdark dark:text-bodydark1 dark:hover:bg-strokedark transition-colors") {
        raw('<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>') +
        "Back to Shop"
      }

      concat " "

      concat link_to(new_shop_olx_category_template_path(@shop), class: "inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-dark transition-colors") {
        raw('<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>') +
        "New Template"
      }
    } %>

<% if @templates.empty? %>
  <%= render "shared/components/card" do %>
    <div class="py-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">No templates</h3>
      <p class="mt-2 text-sm text-gray-500 dark:text-bodydark2">Get started by creating a new OLX category template.</p>
      <div class="mt-6">
        <%= link_to new_shop_olx_category_template_path(@shop), class: "inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-dark transition-colors" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          New Template
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="space-y-4">
    <% @templates.each do |template| %>
      <%= render "shared/components/card", padding: false do %>
        <div class="px-6 py-5">
          <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-medium text-primary truncate">
                <%= template.name %>
              </h3>
              <div class="mt-3 flex flex-wrap items-center gap-4 text-sm text-gray-500 dark:text-bodydark2">
                <span class="inline-flex items-center gap-1.5">
                  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                  </svg>
                  <%= template.olx_category.name %>
                </span>
                <% if template.olx_location.present? %>
                  <span class="inline-flex items-center gap-1.5">
                    <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <%= template.olx_location.name %>
                  </span>
                <% end %>
                <span class="inline-flex items-center gap-1.5">
                  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                  </svg>
                  <%= template.products.count %> products
                </span>
              </div>

              <% if template.default_listing_type.present? || template.default_state.present? %>
                <div class="mt-3 flex items-center gap-2">
                  <% if template.default_listing_type.present? %>
                    <%= render "shared/components/badge", text: template.default_listing_type.humanize, type: "info" %>
                  <% end %>
                  <% if template.default_state.present? %>
                    <%= render "shared/components/badge", text: template.default_state.humanize, type: "success" %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="flex items-center gap-2 ml-4">
              <%= link_to edit_shop_olx_category_template_path(@shop, template), class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-strokedark dark:bg-boxdark dark:text-bodydark1 dark:hover:bg-strokedark transition-colors" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Edit
              <% end %>
              <%= button_to shop_olx_category_template_path(@shop, template), method: :delete, data: { turbo_confirm: "Are you sure? This will unlink #{template.products.count} products from this template." }, form_class: "inline-block", class: "inline-flex items-center gap-2 rounded-lg border border-danger/30 bg-white px-4 py-2 text-sm font-medium text-danger hover:bg-danger/10 dark:border-danger/30 dark:bg-boxdark dark:hover:bg-danger/10 transition-colors" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
