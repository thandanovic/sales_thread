<div class="mb-8 flex justify-between items-center">
  <div>
    <h1 class="text-3xl font-bold text-gray-900"><%= @product.title %></h1>
    <p class="mt-2 text-sm text-gray-700"><%= @product.brand %> - <%= @product.category %></p>
  </div>
  <div class="flex space-x-3">
    <%= link_to "Edit", edit_shop_product_path(@shop, @product), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= button_to "Delete", shop_product_path(@shop, @product), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
  </div>
</div>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Product Information</h3>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">SKU</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.sku || 'N/A' %></dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Base Price</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= number_to_currency(@product.price || 0, unit: @product.currency || "BAM") %></dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Margin</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.margin || 0 %>%</dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Final Price</dt>
        <dd class="mt-1 text-sm font-semibold text-green-600 sm:mt-0 sm:col-span-2"><%= number_to_currency(@product.final_price || 0, unit: @product.currency || "BAM") %></dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Stock</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.stock || 0 %></dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <% if @product.published %>
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Published</span>
          <% else %>
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Draft</span>
          <% end %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Source</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.source.humanize %></dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Description</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <% if @product.description.present? %>
            <pre class="whitespace-pre-line font-sans"><%= @product.description %></pre>
          <% else %>
            <span class="text-gray-400">No description</span>
          <% end %>
        </dd>
      </div>
      <% if @product.images.attached? && @product.images.any? %>
        <div class="bg-gray-50 px-4 py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 mb-4">Product Images (<%= @product.images.count %>)</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
              <% @product.images.each do |image| %>
                <div class="relative group">
                  <%= image_tag image, class: "h-32 w-full object-cover rounded-lg shadow-sm hover:shadow-md transition-shadow cursor-pointer", onclick: "window.open('#{url_for(image)}', '_blank')" %>
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 rounded-lg transition-opacity"></div>
                </div>
              <% end %>
            </div>
          </dd>
        </div>
      <% else %>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Images</dt>
          <dd class="mt-1 text-sm text-gray-400 sm:mt-0 sm:col-span-2">No images available</dd>
        </div>
      <% end %>
    </dl>
  </div>
</div>

<!-- OLX Integration Section -->
<div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">OLX Integration</h3>
    <p class="mt-1 text-sm text-gray-500">Publish and manage this product on OLX marketplace</p>
  </div>
  <div class="px-4 py-5 sm:px-6">

    <!-- Configuration Status -->
    <div class="mb-6 p-4 bg-gray-50 rounded-lg">
      <h4 class="text-sm font-medium text-gray-700 mb-3">Configuration Status</h4>
      <div class="space-y-2 text-sm">
        <div class="flex items-center justify-between">
          <span class="text-gray-600">OLX Template Assigned:</span>
          <% if @product.olx_category_template.present? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              ✓ <%= @product.olx_category_template.display_name %>
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              ✗ No template
            </span>
          <% end %>
        </div>

        <% if @product.olx_category_template.present? %>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Category:</span>
            <span class="text-gray-900"><%= @product.olx_category_template.olx_category.full_path %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Location:</span>
            <span class="text-gray-900"><%= @product.olx_category_template.olx_location.name %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Listing Type:</span>
            <span class="text-gray-900"><%= @product.olx_category_template.default_listing_type&.humanize || 'N/A' %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Item State:</span>
            <span class="text-gray-900"><%= @product.olx_category_template.default_state&.humanize || 'N/A' %></span>
          </div>
        <% end %>

        <div class="flex items-center justify-between">
          <span class="text-gray-600">Shop OLX Credentials:</span>
          <% if @shop.olx_access_token.present? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              ✓ Configured
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              ✗ Not configured
            </span>
          <% end %>
        </div>
      </div>

      <% if @product.olx_category_template.nil? || @shop.olx_access_token.blank? %>
        <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded">
          <p class="text-sm text-yellow-800">
            <strong>Action Required:</strong>
            <% if @product.olx_category_template.nil? %>
              Assign an OLX category template to this product.
              <%= link_to "Edit Product", edit_shop_product_path(@shop, @product), class: "underline" %>
            <% end %>
            <% if @shop.olx_access_token.blank? %>
              Configure OLX credentials in shop settings.
              <%= link_to "Shop Settings", shop_path(@shop), class: "underline" %>
            <% end %>
          </p>
        </div>
      <% end %>
    </div>

    <hr class="my-6">

    <!-- Generated OLX Content Preview -->
    <% if @product.olx_category_template.present? %>
      <div class="mb-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
        <h4 class="text-sm font-medium text-blue-900 mb-3">Generated OLX Content</h4>
        <div class="space-y-4">
          <div>
            <p class="text-xs font-medium text-blue-700 mb-1">Generated Title:</p>
            <p class="text-sm text-blue-900 font-medium bg-white px-3 py-2 rounded border border-blue-200">
              <%= @product.generate_olx_title %>
            </p>
          </div>
          <div>
            <p class="text-xs font-medium text-blue-700 mb-1">Generated Description (filtered by template):</p>
            <div class="text-sm text-blue-900 bg-white px-3 py-2 rounded border border-blue-200 max-h-64 overflow-y-auto">
              <pre class="whitespace-pre-line font-sans text-xs"><%= @product.generate_olx_description %></pre>
            </div>
          </div>
          <% if @product.image_urls.present? && @product.image_urls.any? %>
            <div>
              <p class="text-xs font-medium text-blue-700 mb-2">Images to Upload (<%= @product.image_urls.length %>):</p>
              <div class="grid grid-cols-3 sm:grid-cols-4 gap-2">
                <% @product.image_urls.take(8).each do |url| %>
                  <img src="<%= url %>" class="h-20 w-full object-cover rounded border border-blue-200" alt="Product image">
                <% end %>
                <% if @product.image_urls.length > 8 %>
                  <div class="h-20 flex items-center justify-center bg-blue-100 text-blue-700 text-xs font-medium rounded border border-blue-200">
                    +<%= @product.image_urls.length - 8 %> more
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <p class="text-xs text-blue-600 mt-3 italic">
          This is what will be sent to OLX when you publish or update the listing
        </p>
      </div>

      <hr class="my-6">
    <% end %>

    <!-- Listing Status -->
    <% if @product.olx_listing.present? %>
      <!-- Listing exists -->
      <h4 class="text-sm font-medium text-gray-700 mb-3">Current Listing Status</h4>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-700">Status:</p>
            <p class="mt-1">
              <% case @product.olx_listing.status %>
              <% when 'published' %>
                <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Published on OLX
                </span>
              <% when 'draft' %>
                <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  Draft
                </span>
              <% when 'pending' %>
                <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                  Pending
                </span>
              <% when 'failed' %>
                <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Failed
                </span>
              <% else %>
                <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                  <%= @product.olx_listing.status.humanize %>
                </span>
              <% end %>
            </p>
          </div>
          <% if @product.olx_listing.external_listing_id.present? %>
            <div>
              <p class="text-sm font-medium text-gray-700">Listing ID:</p>
              <p class="mt-1 text-sm text-gray-900"><%= @product.olx_listing.external_listing_id %></p>
            </div>
          <% end %>
        </div>

        <% if @product.olx_listing.published? %>
          <div class="mt-4">
            <%= link_to "View on OLX", @product.olx_listing.olx_url, target: "_blank", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        <% end %>

        <% if @product.olx_listing.failed? %>
          <div class="mt-4 rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3 flex-1">
                <h3 class="text-sm font-medium text-red-800">Failed to Publish</h3>
                <div class="mt-2 text-sm text-red-700">
                  <% if @product.olx_listing.metadata.present? && @product.olx_listing.metadata['error'].is_a?(String) %>
                    <p><%= @product.olx_listing.metadata['error'] %></p>
                  <% else %>
                    <pre class="whitespace-pre-wrap font-sans text-xs"><%= JSON.pretty_generate(@product.olx_listing.metadata || {}) %></pre>
                  <% end %>
                </div>
                <div class="mt-4">
                  <%= button_to "Retry Publishing", publish_to_olx_live_shop_product_path(@shop, @product), method: :post, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Action buttons -->
        <div class="mt-6 flex flex-wrap gap-3">
          <% if @product.olx_listing.draft? %>
            <%= button_to "Publish to OLX Live", publish_to_olx_live_shop_product_path(@shop, @product), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
          <% elsif @product.olx_listing.published? %>
            <%= button_to "Unpublish", unpublish_from_olx_shop_product_path(@shop, @product), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>

          <% if @product.olx_listing.external_listing_id.present? %>
            <%= button_to "Update Listing on OLX", update_on_olx_shop_product_path(@shop, @product), method: :post, class: "inline-flex items-center px-4 py-2 border border-blue-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50" %>
            <%= button_to "Remove from OLX", remove_from_olx_shop_product_path(@shop, @product), method: :delete, data: { turbo_confirm: "Are you sure you want to remove this listing from OLX?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- No listing yet -->
      <div class="text-center py-6">
        <p class="text-sm text-gray-500 mb-4">This product has not been published to OLX yet.</p>

        <% if @product.olx_category_template.present? %>
          <div class="mb-4 p-4 bg-blue-50 rounded-md">
            <p class="text-sm text-blue-700">
              <span class="font-medium">Template:</span> <%= @product.olx_category_template.display_name %>
            </p>
          </div>
          <div class="flex justify-center gap-3">
            <%= button_to "Publish as Draft", publish_to_olx_shop_product_path(@shop, @product), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            <%= button_to "Publish Live on OLX", publish_to_olx_live_shop_product_path(@shop, @product), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
          </div>
        <% else %>
          <div class="mb-4 p-4 bg-yellow-50 rounded-md">
            <p class="text-sm text-yellow-700">
              Please assign an OLX category template to this product before publishing.
            </p>
          </div>
          <%= link_to "Edit Product", edit_shop_product_path(@shop, @product), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-6 flex justify-between">
  <%= link_to "Back to Products", shop_products_path(@shop), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
  <%= link_to "Back to Shop", shop_path(@shop), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
</div>
