<%= paginator.render do %>
  <nav class="flex items-center justify-between border-t border-gray-200 dark:border-strokedark pt-4">
    <%# Mobile: simplified prev/next %>
    <div class="flex flex-1 justify-between sm:hidden">
      <% if current_page.first? %>
        <span class="relative inline-flex items-center rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-300 dark:border-strokedark dark:bg-boxdark dark:text-bodydark2 cursor-not-allowed">
          Previous
        </span>
      <% else %>
        <%= prev_page_tag %>
      <% end %>
      <% if current_page.last? %>
        <span class="relative inline-flex items-center rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-300 dark:border-strokedark dark:bg-boxdark dark:text-bodydark2 cursor-not-allowed">
          Next
        </span>
      <% else %>
        <%= next_page_tag %>
      <% end %>
    </div>

    <%# Desktop: full pagination %>
    <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
      <div>
        <p class="text-sm text-gray-700 dark:text-bodydark2">
          Page
          <span class="font-medium text-gray-900 dark:text-white"><%= current_page.number %></span>
          of
          <span class="font-medium text-gray-900 dark:text-white"><%= total_pages %></span>
        </p>
      </div>
      <div>
        <nav class="inline-flex items-center gap-1" aria-label="Pagination">
          <%= prev_page_tag %>
          <% each_page do |page| %>
            <% if page.display_tag? %>
              <%= page_tag page %>
            <% elsif !page.was_truncated? %>
              <%= gap_tag %>
            <% end %>
          <% end %>
          <%= next_page_tag %>
        </nav>
      </div>
    </div>
  </nav>
<% end %>
